<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/border"
    android:padding="10dp">

    <com.kagami.mireaderlauncher.NanumTextView
        android:id="@+id/tvColumns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="열 갯수"
        android:textSize="15dp"/>

    <RadioGroup
        android:id="@+id/rgColumns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <com.kagami.mireaderlauncher.NanumRadioButton
            android:id="@+id/radioColumn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="15dp"/>
        <com.kagami.mireaderlauncher.NanumRadioButton
            android:id="@+id/radioColumn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="5"
            android:textSize="15dp"/>
        <com.kagami.mireaderlauncher.NanumRadioButton
            android:id="@+id/radioColumn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="6"
            android:textSize="15dp"/>
        <com.kagami.mireaderlauncher.NanumRadioButton
            android:id="@+id/radioColumn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="7"
            android:textSize="15dp"/>
    </RadioGroup>

</LinearLayout>
